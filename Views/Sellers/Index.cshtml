@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Vendedores";
}

<div class="animate-fade-in">
    <!-- Page Header -->
    <div class="page-header text-center">
        <div class="container">
            <h1><i class="fas fa-users me-3"></i>Gestão de Vendedores</h1>
            <p class="lead mb-0">Gerencie sua equipe de vendas de forma eficiente</p>
        </div>
    </div>

    <!-- Action Bar -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Lista de Vendedores
                        <span class="badge bg-primary ms-2">@Model.Count() registro(s)</span>
                    </h5>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Novo Vendedor
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sellers Table -->
    <div class="card">
        <div class="card-header">
            <i class="fas fa-table me-2"></i>Vendedores Cadastrados
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th><i class="fas fa-user me-2"></i>@Html.DisplayNameFor(model => model.Name)</th>
                                <th><i class="fas fa-envelope me-2"></i>@Html.DisplayNameFor(model => model.Email)</th>
                                <th><i class="fas fa-calendar me-2"></i>@Html.DisplayNameFor(model => model.BirthDate)</th>
                                <th><i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(model => model.BaseSalary)</th>
                                <th><i class="fas fa-building me-2"></i>@Html.DisplayNameFor(model => model.DepartmentId)</th>
                                <th width="180" class="text-center"><i class="fas fa-cogs me-2"></i>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                    </td>
                                    <td>
                                        <a href="mailto:@item.Email" class="text-decoration-none">
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BirthDate)
                                    </td>
                                    <td>
                                        <span class="fw-bold text-success">
                                            @Html.DisplayFor(modelItem => item.BaseSalary)
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.Department != null)
                                        {
                                            <span class="badge bg-info">@item.Department.Name</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Não informado</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-info btn-sm" title="Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-danger btn-sm" title="Excluir">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhum vendedor cadastrado</h5>
                    <p class="text-muted">Clique no botão "Novo Vendedor" para começar</p>
                    <a asp-action="Create" class="btn btn-success mt-3">
                        <i class="fas fa-plus me-2"></i>Cadastrar Primeiro Vendedor
                    </a>
                </div>
            }
        </div>
    </div>
</div>

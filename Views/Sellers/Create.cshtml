@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Novo Vendedor";
}

<div class="animate-fade-in">
    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
    <div class="page-header text-center">
        <div class="container">
            <h1><i class="fas fa-user-plus me-3"></i>Cadastrar Novo Vendedor</h1>
            <p class="lead mb-0">Adicione um novo membro à sua equipe de vendas</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user-edit me-2"></i>Informações do Vendedor</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label fw-bold">
                                        <i class="fas fa-user me-2"></i>@Html.DisplayNameFor(model => model.Name)
                                    </label>
                                    <input asp-for="Name" class="form-control" placeholder="Digite o nome completo"/>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label fw-bold">
                                        <i class="fas fa-envelope me-2"></i>@Html.DisplayNameFor(model => model.Email)
                                    </label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="vendedor@empresa.com"/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="BirthDate" class="form-label fw-bold">
                                        <i class="fas fa-calendar me-2"></i>@Html.DisplayNameFor(model => model.BirthDate)
                                    </label>
                                    <input asp-for="BirthDate" class="form-control" type="date"/>
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="BaseSalary" class="form-label fw-bold">
                                        <i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(model => model.BaseSalary)
                                    </label>
                                    <input asp-for="BaseSalary" class="form-control" type="number" step="0.01" placeholder="0,00"/>
                                    <span asp-validation-for="BaseSalary" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="DepartmentId" class="form-label fw-bold">
                                <i class="fas fa-building me-2"></i>@Html.DisplayNameFor(model => model.DepartmentId)
                            </label>
                            <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.DepartmentId">
                                <option value="">-- Selecione um Departamento --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Voltar à Lista
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Cadastrar Vendedor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

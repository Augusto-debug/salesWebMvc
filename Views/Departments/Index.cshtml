@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animate-fade-in">
    <!-- Page Header -->
    <div class="page-header text-center">
        <div class="container">
            <h1><i class="fas fa-building me-3"></i>Gestão de Departamentos</h1>
            <p class="lead mb-0">Organize e gerencie os departamentos da sua empresa</p>
        </div>
    </div>

    <!-- Action Bar -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Lista de Departamentos
                        <span class="badge bg-primary ms-2">@Model.Count() registro(s)</span>
                    </h5>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Novo Departamento
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Departments Table -->
    <div class="card">
        <div class="card-header">
            <i class="fas fa-table me-2"></i>Departamentos Cadastrados
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th><i class="fas fa-building me-2"></i>Nome do Departamento</th>
                                <th><i class="fas fa-users me-2"></i>Vendedores</th>
                                <th width="180" class="text-center"><i class="fas fa-cogs me-2"></i>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="department-icon me-3">
                                                <i class="fas fa-building text-primary"></i>
                                            </div>
                                            <div>
                                                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                                <small class="text-muted d-block">ID: #@item.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.Sellers != null && item.Sellers.Any())
                                        {
                                            <span class="badge bg-info fs-6">
                                                @item.Sellers.Count vendedor(es)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Sem vendedores</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-info btn-sm" title="Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-danger btn-sm" title="Excluir">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-building fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhum departamento cadastrado</h5>
                    <p class="text-muted">Clique no botão "Novo Departamento" para começar</p>
                    <a asp-action="Create" class="btn btn-success mt-3">
                        <i class="fas fa-plus me-2"></i>Cadastrar Primeiro Departamento
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
.department-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #18bc9c;
    font-size: 1.2rem;
}
</style>

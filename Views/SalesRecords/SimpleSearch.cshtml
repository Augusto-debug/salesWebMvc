@model IEnumerable<SalesWebMvc.Models.SalesRecord>

@{
    ViewData["Title"] = "Pesquisa Simples de Vendas";
}

<div class="animate-fade-in">
    <!-- Page Header -->
    <div class="page-header text-center">
        <div class="container">
            <h1><i class="fas fa-search me-3"></i>Pesquisa Simples de Vendas</h1>
            <p class="lead mb-0">Relatório detalhado de vendas no período selecionado</p>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filtros de Pesquisa</h5>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="minDate" class="form-label fw-bold">
                                <i class="fas fa-calendar me-2"></i>Data Inicial
                            </label>
                            <input type="date" class="form-control" name="minDate" id="minDate" value="@ViewData["minDate"]" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="maxDate" class="form-label fw-bold">
                                <i class="fas fa-calendar me-2"></i>Data Final
                            </label>
                            <input type="date" class="form-control" name="maxDate" id="maxDate" value="@ViewData["maxDate"]" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-2"></i>Pesquisar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Resultados da Pesquisa
                <span class="badge bg-primary ms-2">@Model.Count() registro(s)</span>
            </h5>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Voltar
                </a>
                <a asp-action="GroupingSearch" asp-route-minDate="@ViewData["minDate"]" asp-route-maxDate="@ViewData["maxDate"]" class="btn btn-success">
                    <i class="fas fa-chart-bar me-2"></i>Ver Agrupado
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th><i class="fas fa-calendar me-2"></i>@Html.DisplayNameFor(model => model.Date)</th>
                                <th><i class="fas fa-user me-2"></i>@Html.DisplayNameFor(model => model.Seller)</th>
                                <th><i class="fas fa-building me-2"></i>Departamento</th>
                                <th><i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(model => model.Amount)</th>
                                <th><i class="fas fa-info-circle me-2"></i>@Html.DisplayNameFor(model => model.Status)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        <strong>@item.Seller.Name</strong>
                                        <br>
                                        <small class="text-muted">@item.Seller.Email</small>
                                    </td>
                                    <td>
                                        @if (item.Seller.Department != null)
                                        {
                                            <span class="badge bg-info">@item.Seller.Department.Name</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="fw-bold text-success">
                                            R$ @Html.DisplayFor(modelItem => item.Amount)
                                        </span>
                                    </td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case SalesWebMvc.Models.Enums.SaleStatus.Pending:
                                                <span class="badge bg-warning">Pendente</span>
                                                break;
                                            case SalesWebMvc.Models.Enums.SaleStatus.Billed:
                                                <span class="badge bg-success">Faturado</span>
                                                break;
                                            case SalesWebMvc.Models.Enums.SaleStatus.Canceled:
                                                <span class="badge bg-danger">Cancelado</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3">Total Geral</th>
                                <th>
                                    <span class="fw-bold text-success">
                                        R$ @Model.Sum(x => x.Amount).ToString("F2")
                                    </span>
                                </th>
                                <th>@Model.Count() vendas</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhuma venda encontrada</h5>
                    <p class="text-muted">Tente ajustar o período de pesquisa</p>
                </div>
            }
        </div>
    </div>
</div>

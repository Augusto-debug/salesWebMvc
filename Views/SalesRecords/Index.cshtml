@{
    ViewData["Title"] = "Relatórios de Vendas";
}

<div class="animate-fade-in">
    <!-- Page Header -->
    <div class="page-header text-center">
        <div class="container">
            <h1><i class="fas fa-chart-line me-3"></i>Relatórios de Vendas</h1>
            <p class="lead mb-0">Analise o desempenho das vendas com relatórios detalhados</p>
        </div>
    </div>

    <!-- Search Options -->
    <div class="row">
        <!-- Simple Search Card -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-search me-2"></i>Pesquisa Simples
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Visualize todas as vendas em um período específico com detalhes completos.</p>
                    <form asp-action="SimpleSearch" method="get">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group mb-3">
                                    <label for="minDate" class="form-label fw-bold">
                                        <i class="fas fa-calendar me-2"></i>Data Inicial
                                    </label>
                                    <input type="date" class="form-control" name="minDate" id="minDate" 
                                           value="@DateTime.Now.Year-01-01" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group mb-3">
                                    <label for="maxDate" class="form-label fw-bold">
                                        <i class="fas fa-calendar me-2"></i>Data Final
                                    </label>
                                    <input type="date" class="form-control" name="maxDate" id="maxDate" 
                                           value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search me-2"></i>Pesquisar Vendas
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Grouping Search Card -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Pesquisa Agrupada
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Visualize vendas agrupadas por departamento com totais e estatísticas.</p>
                    <form asp-action="GroupingSearch" method="get">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group mb-3">
                                    <label for="minDate2" class="form-label fw-bold">
                                        <i class="fas fa-calendar me-2"></i>Data Inicial
                                    </label>
                                    <input type="date" class="form-control" name="minDate" id="minDate2" 
                                           value="@DateTime.Now.Year-01-01" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group mb-3">
                                    <label for="maxDate2" class="form-label fw-bold">
                                        <i class="fas fa-calendar me-2"></i>Data Final
                                    </label>
                                    <input type="date" class="form-control" name="maxDate" id="maxDate2" 
                                           value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-chart-bar me-2"></i>Relatório por Departamento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-info-circle me-2"></i>Informações dos Relatórios
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6><i class="fas fa-list me-2"></i>Pesquisa Simples</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>Lista detalhada de todas as vendas</li>
                        <li><i class="fas fa-check text-success me-2"></i>Informações do vendedor e departamento</li>
                        <li><i class="fas fa-check text-success me-2"></i>Status e valor de cada venda</li>
                        <li><i class="fas fa-check text-success me-2"></i>Ordenação cronológica</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6><i class="fas fa-chart-pie me-2"></i>Pesquisa Agrupada</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>Vendas agrupadas por departamento</li>
                        <li><i class="fas fa-check text-success me-2"></i>Total de vendas por grupo</li>
                        <li><i class="fas fa-check text-success me-2"></i>Análise comparativa de desempenho</li>
                        <li><i class="fas fa-check text-success me-2"></i>Visão estratégica do negócio</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>